<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top" android:orientation="horizontal">
        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progresBar"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            app:rcBackgroundColor="@color/white"
            app:rcBackgroundPadding="0dp"
            app:rcBackgroundRadius="0dp"
            app:rcMax="100"
            app:rcProgress="40"
            app:rcProgressColor="@color/accent_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">

        <com.audioplayer.sample.widget.TimeTextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" android:orientation="horizontal">

            <com.audioplayer.sample.widget.TimeTextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_fastbackward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_replay_white_36dp"/>
        <ImageView
            android:id="@+id/iv_step_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_skip_previous_white_48dp"/>

        <ToggleButton
            android:id="@+id/play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/toggle_button_selector_play"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:checked="true" />

        <!--android:background="@drawable/bt_1"-->

        <ImageView
            android:id="@+id/iv_step_forward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_skip_next_white_48dp"/>
        <ImageView
            android:id="@+id/iv_fastforward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_refresh_white_36dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_lightbulb_white_36dp"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_chevron_double_down_white_36dp"/>
        <ImageView
            android:id="@+id/iv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/bt_1"
            android:src="@drawable/ic_repeat_off_white_36dp"/>
    </LinearLayout>
</merge>
    